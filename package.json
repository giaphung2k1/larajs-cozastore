{
    "private": true,
    "scripts": {
        "dev": "npm run dev.js & npm run dev.css",
        "watch": "npm run watch.js & npm run watch.css",
        "watch-hot": "npm run watch-hot.js & npm run watch.css",
        "prod": "concurrently \"npm run prod.js\" \"npm run prod.css\"",
        "dev-fe": "mix --mix-config=webpack-frontend.mix.js",
        "watch-fe": "mix watch --mix-config=webpack-frontend.mix.js",
        "watch-fe-hot": "mix watch --mix-config=webpack-frontend.mix.js --hot",
        "prod-fe": "mix --production --mix-config=webpack-frontend.mix.js",
        "watch-all": "npm run watch & npm run watch-fe",
        "prod-all": "concurrently \"npm run prod-fe\" \"npm run prod\"",
        "dev.css": "mix --mix-config=webpack-css.mix.js",
        "watch.css": "mix watch --mix-config=webpack-css.mix.js",
        "watch-hot.css": "mix watch --mix-config=webpack-css.mix.js --hot",
        "prod.css": "mix --production --mix-config=webpack-css.mix.js",
        "dev.js": "mix --mix-config=webpack-js.mix.js",
        "watch.js": "mix watch --mix-config=webpack-js.mix.js",
        "watch-hot.js": "mix watch --mix-config=webpack-js.mix.js --hot",
        "prod.js": "mix --production --mix-config=webpack-js.mix.js",
        "dev.js.report": "mix --mix-config=webpack-js.mix.js -- --env --report",
        "prod.js.report": "mix --production --mix-config=webpack-js.mix.js -- --env --report",
        "dev-fe.report": "mix --report --mix-config=webpack-frontend.mix.js",
        "prod-fe.report": "mix --production --report --mix-config=webpack-frontend.mix.js",
        "lint": "lint-staged",
        "eslint:fix": "eslint 'resources/js/**/*.{js,vue}' --fix",
        "prettier:fix": "prettier --write 'resources/js/**/*.{js,vue}'",
        "prettier:quick": "pretty-quick --staged",
        "prettier:php": "prettier --write {app,config,database,resources,routes}/**/*.php"
    },
    "lint-staged": {
        "resources/**/*.{js,vue}": [
            "eslint 'resources/js/**/*.{js,vue}' --fix"
        ],
        "frontend/src/**/*.{js,vue}": [
            "eslint 'frontend/src/**/*.{js,vue}' --fix"
        ]
    },
    "devDependencies": {
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@prettier/plugin-php": "^0.17.2",
        "autoprefixer": "^10.3.1",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.2.2",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-syntax-jsx": "^6.18.0",
        "babel-plugin-transform-vue-jsx": "^3.7.0",
        "clean-webpack-plugin": "^3.0.0",
        "compression-webpack-plugin": "^8.0.1",
        "concurrently": "^6.2.0",
        "core-js": "^3.15.2",
        "cross-env": "^7.0.3",
        "css-loader": "^3.6.0",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-eslint-plugin": "^3.4.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-vue": "^7.14.0",
        "eslint-webpack-plugin": "^3.0.1",
        "husky": "^7.0.1",
        "laravel-mix": "^6.0.25",
        "laravel-mix-eslint-config": "^0.1.7",
        "laravel-mix-merge-manifest": "^2.0.0",
        "laravel-mix-purgecss": "^6.0.0",
        "lint-staged": "^11.1.0",
        "moment-locales-webpack-plugin": "^1.2.0",
        "node-sass": "^6.0.1",
        "path-browserify": "^1.0.1",
        "postcss": "^8.3.6",
        "prettier": "^2.3.2",
        "pretty-quick": "^3.1.1",
        "resolve-url-loader": "^4.0.0",
        "sass-loader": "^12.1.0",
        "script-loader": "^0.7.2",
        "style-loader": "^3.2.1",
        "svg-sprite-loader": "^6.0.9",
        "tailwindcss": "^2.2.6",
        "vue-loader": "^15.9.6",
        "vue-template-compiler": "^2.6.14",
        "webpack": "^5.46.0",
        "webpack-bundle-analyzer": "^4.4.2",
        "webpack-chunk-rename-plugin": "^1.0.3",
        "webpack-cli": "^4.7.2"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "codemirror": "^5.62.2",
        "dropzone": "^5.9.2",
        "echarts": "^5.1.2",
        "element-ui": "^2.15.3",
        "file-saver": "^2.0.5",
        "js-cookie": "^2.2.1",
        "jsonlint": "^1.6.3",
        "jszip": "^3.6.0",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "nprogress": "^0.2.0",
        "path-to-regexp": "^6.2.0",
        "sass": "^1.32.13",
        "tui-editor": "^1.4.10",
        "vue": "^2.6.14",
        "vue-count-to": "^1.0.13",
        "vue-i18n": "^8.25.0",
        "vue-router": "^3.5.2",
        "vue2-dropzone": "^3.6.0",
        "vuedraggable": "^2.24.3",
        "vuex": "^3.6.2",
        "xlsx": "^0.17.0"
    }
}
